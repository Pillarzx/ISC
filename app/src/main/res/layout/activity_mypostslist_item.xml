<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/myposts_postsuserimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/myposts_postsuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_username"
                android:layout_marginTop="3dp" />
            <TextView
                android:id="@+id/myposts_poststime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:layout_marginTop="3dp"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/myposts_poststext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="input your sentences..."/>
    <ImageView
        android:id="@+id/myposts_postsimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        style="@style/bg_line"
        android:paddingTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/message" />
        <TextView
            android:id="@+id/myposts_postscommentnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"/>

    </LinearLayout>
</LinearLayout>
